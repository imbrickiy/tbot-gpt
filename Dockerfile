FROM node:16-alpine

# Создаем директорию для нашего приложения
WORKDIR /app

# Копируем зависимости нашего приложения
COPY package*.json ./

# Устанавливаем зависимости
RUN npm ci

# Копируем исходный код нашего приложения
COPY . .

# Открываем порты, на которых будет работать наше приложение и телеграм бот
ENV PORT=3000

EXPOSE $PORT
# Запускаем наше приложение и телеграм бот
CMD ["npm", "start"]
